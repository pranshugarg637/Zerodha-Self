<% layout("/layouts/dashboard")%>
<form method="post" action="/makeOrder" class="needs-validation" novalidate>
  <!-- <div class="mb-3 mt-2">
    <label for="stockName" class="form-label">Enter name of stock to buy</label>
    <input type="text" class="form-control" id="stockName" name="name" required>
    <div class="invalid-feedback">Pls enter the name of stock</div>
  </div> -->
  <div class="mb-3">
    <br>
      <label for="nameSelect" class="form-label">Name</label>
      <select id="nameSelect" class="form-select" name="name">
        <%watchListOrder.forEach((or)=>{%>
          <option><%=or.name%></option>
        <%})%>
      </select>
    </div>

  <div class="mb-4">
    <label for="quantity" class="form-label">Quantity</label>
    <input type="number" step="0.01" class="form-control" id="stock-qty" name="qty" required>
    <div class="invalid-feedback">Pls enter a quantity</div>
  </div>
  <div class="mb-4">
    <label class="form-label" for="price">Price (cost in holdings)</label>
    <input type="number" step="0.01" class="form-control" id="price" name="price" required>
    <div class="invalid-feedback">Pls enter the price</div>
  </div><br>
  <button type="submit" class="btn btn-primary">Buy</button>
</form>